{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "rules": {
    // native eslint
    "indent": [
        2,
        4
    ],
    "linebreak-style": [
        2,
        "unix"
    ],
    "semi": [
        2,
        "always"
    ],
    "no-console": 0
  },
  "env": {
    "browser": true,
    "mocha": true
  }
}